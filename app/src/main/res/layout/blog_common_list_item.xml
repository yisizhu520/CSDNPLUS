<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/spacing_small"
        >


        <TextView
            android:id="@+id/blog_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal"
            tools:text="微软沈向阳：对初级情感的机器人开发包邮仅为锥心"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_title_tv"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/blog_avatar_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:riv_oval="true"
                tools:src="@drawable/default_avatar_img"
                />

            <TextView
                android:id="@+id/blog_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_tiny"
                android:ellipsize="end"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_small"
                tools:text="漫步云端的CSDN"
                />

            <TextView
                android:id="@+id/blog_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_tiny"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_small"
                tools:text="今天 22:22"
                />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blog_title_tv"
            android:layout_marginTop="@dimen/spacing_small"
            >

            <TextView
                android:id="@+id/blog_comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_small"
                tools:text="评 222"
                />


            <TextView
                android:id="@+id/blog_zan_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_tiny"
                android:layout_toLeftOf="@+id/blog_comment_num_tv"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_small"
                tools:text="赞 222"
                />

            <TextView
                android:id="@+id/blog_look_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/spacing_tiny"
                android:layout_toLeftOf="@+id/blog_zan_num_tv"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_small"
                tools:text="看 222"
                />

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>