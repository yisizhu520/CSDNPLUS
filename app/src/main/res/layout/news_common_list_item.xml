<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/news_title_iv"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/spacing_small"
                android:scaleType="centerCrop"
                android:src="@drawable/default_news_img"
                tools:visibility="visible"
                />


            <TextView
                android:id="@+id/news_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_toLeftOf="@+id/news_title_iv"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                tools:text="微软沈向阳：对初级情感的机器人开发包邮仅为锥心"
                />

            <TextView
                android:id="@+id/news_source_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/news_title_tv"
                android:layout_marginTop="@dimen/spacing_normal"
                android:singleLine="true"
                android:text="来自：www.gamelook.com.cn"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_small"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            >

            <TextView
                android:id="@+id/news_author_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/font_small"
                tools:text="漫步云端的CSDN"
                />

            <TextView
                android:id="@+id/news_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_toRightOf="@+id/news_author_tv"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_small"
                tools:text="分享于 今天 22:22"
                />

            <TextView
                android:id="@+id/news_comment_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_small"
                tools:text="评222"
                />

            <TextView
                android:id="@+id/news_zan_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/font_normal"
                android:layout_toLeftOf="@+id/news_comment_num_tv"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="@dimen/font_small"
                tools:text="赞222"
                />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>